{
  "env": {
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2017
	},
  "extends": "eslint:recommended",
  "globals": {
  },
  "rules": {
			"no-console": "off",
      "no-eval": "error",
      "no-implied-eval": "error",
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "comma-style": [
        "error",
        "last"
      ],
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "warn",
        "single"
    ]
  }
}